{
    "name": "Playdate Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools-extension-pack"
            ]
        }
    },
    "features": {
        "desktop-lite": {
            "password": "vscode",
            "webPort": "6080",
            "vncPort": "5901"
        }
    },
    "portsAttributes": {
        "6080": {
            "label": "dev desktop",
            "onAutoForward": "notify"
        }
    }
}